<xi:include href="/usr/local/limatix-qautils/checklist/datacollect2.xsl" xpointer="xmlns(xsl=http://www.w3.org/1999/XSL/Transform) xpointer(/xsl:stylesheet/node())" />

<xsl:template xmlns="http://www.w3.org/1999/xhtml" xmlns:dir="http://thermal.cnde.iastate.edu/databrowse/dir" xmlns:dc="http://limatix.org/datacollect" xmlns:dcv="http://limatix.org/dcvalue" xmlns:chx="http://limatix.org/checklist" xmlns:xlink="http://www.w3.org/1999/xlink" match="dir:search" mode="title">
	<xsl:element name="script">
		<xsl:attribute name="type">text/javascript</xsl:attribute>
		<xsl:attribute name="src"><xsl:value-of select="@resurl"/>/threejs/x_ite/x_ite.js</xsl:attribute>
	</xsl:element>
	<xsl:element name="link">
		<xsl:attribute name="rel">stylesheet</xsl:attribute>
		<xsl:attribute name="type">text/css</xsl:attribute>
		<xsl:attribute name="href"><xsl:value-of select="@resurl"/>/threejs/x_ite/x_ite.css</xsl:attribute>
	</xsl:element>
	<script type="text/javascript">
		var fullpath = "<xsl:value-of select="@path"/>";
		<![CDATA[
			$( document ).ready(function() {
				$("#searchterm").keyup(function(event) {
					if (event.keyCode === 13) {
						$("#searchbutton").click();
					}
				});

				$("#searchbutton").click(function() {
					loadresults();
				});
			});

			function loadresults(term) {
			    var text;
		    	if (term) {
		    	    text = term;
		    	} else {
		    	    text = document.getElementById("searchterm").value;
		    	}
			    if (text) {
			        ajaxurl = fullpath + "&nopagestyle&search="+text;
			        $.ajax({url: ajaxurl, success: function(result){
						result = result.getElementById("searchcontent");
						currentresult = document.getElementById("searchcontent");
						currentresult.innerHTML = result.innerHTML;
					}});
			    }
			}
		]]>
	</script>
	<div id="specimenwrapper">
		<div style="float:right"><input type="text" id="searchterm"/><button id="searchbutton">Go</button></div>
		<div id="searchcontent">
			<xsl:apply-templates/>
		</div>
	</div>
</xsl:template>
<xsl:template xmlns="http://www.w3.org/1999/xhtml" xmlns:dir="http://thermal.cnde.iastate.edu/databrowse/dir" match="dir:specimens">
	<h3>Detected Specimens</h3>
	<xsl:for-each select="dir:specimen">
		<a>
			<xsl:attribute name="onclick">loadresults('<xsl:value-of select="text()"/>')</xsl:attribute>
			<xsl:value-of select="text()"/>
		</a>
		<br/>
	</xsl:for-each>
	<br/>
</xsl:template>
<xsl:template xmlns="http://www.w3.org/1999/xhtml" xmlns:dir="http://thermal.cnde.iastate.edu/databrowse/dir" xmlns:dc="http://limatix.org/datacollect" match="dir:content/dc:fusion">
	<h3>3D Fusion</h3>
	<X3DCanvas style="width: 700px; height: 432px;">
		<xsl:attribute name="src"><xsl:value-of select="dc:greensinversion_3d"/></xsl:attribute>
		<p>Your browser may not support all features required by X_ITE. For a better experience, keep your browser up to date.</p>
	</X3DCanvas>
</xsl:template>
<xsl:template xmlns="http://www.w3.org/1999/xhtml" xmlns:dir="http://thermal.cnde.iastate.edu/databrowse/dir" xmlns:dc="http://limatix.org/datacollect" match="dir:content/dc:measurement">
	<h3>Measurement Summary</h3>
	<table class="cream full-width">
	        <thead>
	            <tr><th style="width:166px">Item</th><th>Value</th></tr>
	        </thead>
	        <tbody>
	            <xsl:apply-templates select="dc:*" />
	        </tbody>
	    </table>
</xsl:template>
<xsl:template xmlns="http://www.w3.org/1999/xhtml" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:dc="http://thermal.cnde.iastate.edu/datacollect" xmlns:xlink="http://www.w3.org/1999/xlink" match="dc:config/dc:configfile" name="config" mode="full">
    <h3>Configuration</h3>
            <xsl:choose>
                <xsl:when test="@xlink:href and @url">
                    <a><xsl:attribute name="href"><xsl:value-of select="@url"/></xsl:attribute>
                    <tt><xsl:value-of select="@xlink:href"/></tt></a>
                </xsl:when>
                <xsl:otherwise>
                    <tt><xsl:value-of select="@xlink:href"/></tt>
                </xsl:otherwise>
            </xsl:choose>
        <pre class="prettyprint" style="height:300px">
            <xsl:value-of select="."/>
        </pre>
</xsl:template>
